                </div>
            </div>
        </nav>

            <div class="col-lg-offset-1  col-lg-10  col-sm-12 col-xs-12">
                <div class="panel panel-default">                        
                    <div class="panel-heading">
                        <h4>Consumos de <%= usuario%></h4>
                        <p>Gasto acumulado: $<%= consumoTotal%></p>
                    </div>                    
                    <!--
                    <h5>Gasto acumulado en el dia: $60</h5>
                    <h5>Gasto acumulado en el semana : $352</h5>
                    <h5>Gasto acumulado en el mes: $1050</h5>
                    <h5>Gasto acumulado en el a√±o: $8892.20</h5>
                    -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-lg-5 col-sm-5 col-xs-6">Motivo</th>
                                <th class="col-lg-1 col-sm-2 col-xs-1">Importe</th>
                                <th class="col-lg-1 col-sm-2 col-xs-2">Medio de pago</th>
                                <th class="col-lg-1 col-sm-3 col-xs-3">Fecha</th>                                
                            </tr>
                        </thead>
                        <% if (locals.consumo) { %>
                        <tbody>
                            <% consumo.forEach(function(consumo) { %>
                            <tr>
                                <td class="col-lg-5 col-sm-5 col-xs-6"><%= consumo.descripcion %></td>
                                <td class="col-lg-1 col-sm-2 col-xs-1">$<%= consumo.importe %></td>
                                <td class="col-lg-1 col-sm-2 col-xs-2">-</td>
                                <td class="col-lg-1 col-sm-3 col-xs-3"><%= escape(consumo.createdAt).substr(4, 17) %></td>                                
                            </tr>
                            <% }); %>
                        </tbody>
                        <% } %>
                    </table>          
                </div>
         
            </div>        
        <!-- JQUERY -->
        <script type="text/javascript" src="..\jquery\dist\jquery.js"></script>        
        <!-- BOOTSTRAP -->
        <script type="text/javascript" src="..\bootstrap\dist\js\bootstrap.js"></script>
        <!-- SOCKET -->
        <script type="text/javascript" src="/js/socket.io/socket.io.js"></script>
        <script>var socket = io.connect('http://<%= ip %>:<%= port%>', { 'forceNew': true });</script>
        <!-- CUSTOM -->
        <script type="text/javascript" src="../js/index.js"></script>
